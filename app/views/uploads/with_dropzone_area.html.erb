<div class="col-lg-12 text-center">
  <h1> Basic Plus Example </h1>
  <%=link_to "Basic Example", uploads_path%>
</div>
<form action='/uploads' enctype='multipart/form-data' id='fileupload_dda_example' method='POST'>
  <noscript>
    <input name='redirect' type='hidden' value='/diners/fav_dish_uploads'>
  </noscript>
  <div class='row fileupload-buttonbar'>
    <div class='col-lg-12 text-center'>
      <h4>Drag & Drop images or choose files</h4>
      <div id="dropzone" class= "fade well"> Drop files here </div>
      <span class='btn btn-success fileinput-button'>
        <i class='glyphicon glyphicon-plus'></i>
        <span>Add files...</span>
        <input multiple='multiple' name='files[]' type='file'>
      </span>
      <button class='btn btn-primary start' type='submit'>
        <span>Start upload</span>
      </button>
      <button class='btn btn-warning cancel' type='reset'>
        <span>Cancel upload</span>
      </button>
      <button type="button" class="btn btn-danger delete">
        <span>Delete (Global) </span>
        </button>
        <input type="checkbox" class="toggle">
      <span class='fileupload-process'></span>
    </div>
    <div class='col-lg-12 fileupload-progress fade'>
      <div aria-valuemax='100' aria-valuemin='0' class='progress progress-striped active' role='progressbar'>
        <div class='progress-bar progress-bar-success' style='width:100%;'></div>
      </div>
      <div class='progress-extended'> </div>
    </div>
  </div>
  <table class='table table-striped' role='presentation'>
    <tbody class='files'></tbody>
  </table>
</form>

<div class='blueimp-gallery blueimp-gallery-controls' data-filter=':even' id='blueimp-gallery'>
  <div class='slides'></div>
  <h3 class='title'></h3>
  <a class='prev'>‹</a>
  <a class='next'>›</a>
  <a class='close'>×</a>
  <a class='play-pause'></a>
  <ol class='indicator'></ol>
</div>

<%= render "shared/uploader_template"%>
<%= render "shared/downloader_template"%>
